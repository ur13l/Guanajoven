<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


            <fragment
                android:id="@+id/mapa_region"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.40" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nombre_region"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Nombre de la región"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorMagenta"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_direccion_region"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Dirección de la región" />

                <TextView
                    android:id="@+id/tv_responsable_region"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Responsable de la región" />

                <TextView
                    android:id="@+id/tv_descripcion_region"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Descripción de la región" />

            </LinearLayout>


</LinearLayout>