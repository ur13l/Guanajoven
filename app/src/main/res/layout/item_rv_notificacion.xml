<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    style="@style/AppTheme.CardViewStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_notificacion_64_px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nombre_notificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Título notificación"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tv_mensaje_notificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mensaje notificación"/>

            <TextView
                android:id="@+id/tv_fecha_notificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha notificación"/>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>