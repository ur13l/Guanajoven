<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/home"
            android:scaleType="centerCrop"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_background">

        </FrameLayout>

    </FrameLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/boton_chat"
            android:layout_width="67dp"
            android:layout_height="79dp"
            android:background="@drawable/circular_button"
            android:drawableTop="@drawable/ic_chat_white_36dp"
            android:paddingTop="10dp"
            android:textColor="#fff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/boton_eventos"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.862"
            app:layout_constraintVertical_bias="0.536" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="108dp"
            android:layout_height="19dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal"
            android:text="@string/chat"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="@+id/boton_chat"
            app:layout_constraintRight_toRightOf="@+id/boton_chat"
            app:layout_constraintTop_toBottomOf="@+id/boton_chat"
            app:layout_constraintHorizontal_bias="0.548" />

        <Button
            android:id="@+id/boton_redes_sociales"
            android:layout_width="77dp"
            android:layout_height="76dp"
            android:background="@drawable/circular_button"
            android:drawableTop="@drawable/ic_group_white_36dp"
            android:paddingTop="10dp"
            android:textColor="#fff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/boton_eventos"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.506"
            app:layout_constraintHorizontal_bias="0.518" />

        <TextView
            android:id="@+id/textview_id_guanajoven"
            android:layout_width="79dp"
            android:layout_height="43dp"
            android:gravity="center_horizontal"
            android:text="@string/id_guanajoven"
            android:textColor="@color/white"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/boton_codigo_guanajoven"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/boton_codigo_guanajoven"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/boton_codigo_guanajoven"
            app:layout_constraintHorizontal_bias="0.363"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/textview_regiones"
            android:layout_width="79dp"
            android:layout_height="43dp"
            android:gravity="center_horizontal"
            android:text="@string/regiones"
            android:textColor="@color/white"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/boton_regiones"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/boton_regiones"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/boton_regiones"
            app:layout_constraintHorizontal_bias="0.363"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="88dp"
            android:layout_height="38dp"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal"
            android:text="@string/eventos"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/boton_eventos"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/boton_eventos"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/boton_eventos" />

        <TextView
            android:id="@+id/textview_promociones"
            android:layout_width="96dp"
            android:layout_height="23dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal"
            android:text="@string/promociones"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/boton_promociones"
            app:layout_constraintLeft_toLeftOf="@+id/boton_promociones"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/boton_promociones"
            card_view:layout_editor_absoluteY="461dp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/textview_notificaciones"
            android:layout_width="96dp"
            android:layout_height="23dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal"
            android:text="@string/notificaciones"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/boton_notificaciones"
            app:layout_constraintLeft_toLeftOf="@+id/boton_notificaciones"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/boton_notificaciones"
            card_view:layout_editor_absoluteY="461dp"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/textView6"
            android:layout_width="54dp"
            android:layout_height="38dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="@string/social"
            android:textColor="@color/white"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintLeft_toLeftOf="@+id/boton_redes_sociales"
            app:layout_constraintRight_toRightOf="@+id/boton_redes_sociales"
            app:layout_constraintTop_toBottomOf="@+id/boton_redes_sociales" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="298dp"
            android:layout_height="291dp"
            android:layout_marginTop="64dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/logo_guanajoven_nuevo"
            app:layout_constraintHorizontal_bias="0.502"
            card_view:layout_editor_absoluteX="88dp" />

        <Button
            android:id="@+id/boton_promociones"
            android:layout_width="65dp"
            android:layout_height="67dp"
            android:background="@drawable/circular_button"
            android:drawableTop="@drawable/ic_promociones_home"
            android:paddingTop="10dp"
            android:textColor="#fff"
            app:layout_constraintRight_toLeftOf="@+id/boton_redes_sociales"
            android:layout_marginRight="99dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/boton_codigo_guanajoven"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:visibility="visible"
            app:layout_constraintVertical_bias="0.508" />

        <Button
            android:id="@+id/boton_notificaciones"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/circular_button"
            android:drawableTop="@drawable/ic_notificaciones_home"
            android:paddingTop="10dp"
            android:textColor="#fff"
            app:layout_constraintRight_toLeftOf="@+id/boton_redes_sociales"
            android:layout_marginRight="58dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/boton_regiones"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/boton_codigo_guanajoven"
            android:layout_width="80dp"
            android:layout_height="71dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/circular_button"
            android:drawableTop="@drawable/qr_white"
            android:paddingTop="10dp"
            android:textColor="#fff"
            app:layout_constraintTop_toBottomOf="@+id/imageView9"
            app:layout_constraintRight_toLeftOf="@+id/boton_eventos"
            android:layout_marginRight="87dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/boton_regiones"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/circular_button"
            android:drawableTop="@drawable/ic_regiones_home"
            android:paddingTop="10dp"
            android:textColor="#fff"
            app:layout_constraintTop_toBottomOf="@+id/imageView9"
            app:layout_constraintRight_toLeftOf="@+id/boton_eventos"
            android:layout_marginRight="64dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/boton_eventos"
            android:layout_width="75dp"
            android:layout_height="81dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/circular_button"
            android:drawableTop="@drawable/ic_event_white_36dp"
            android:paddingTop="10dp"
            android:textColor="#fff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView9"
            card_view:layout_editor_absoluteX="252dp" />

        <Button
            android:id="@+id/boton_convocatorias"
            android:layout_width="72dp"
            android:layout_height="81dp"
            android:layout_marginTop="77dp"
            android:background="@drawable/circular_button"
            android:drawableTop="@drawable/ic_convocatoria_home"
            android:paddingTop="10dp"
            android:textColor="#fff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView9"
            app:layout_constraintHorizontal_bias="0.866" />

        <TextView
            android:id="@+id/tv_perfil"
            android:layout_width="96dp"
            android:layout_height="23dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal"
            android:text="@string/convocatorias"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/boton_convocatorias"
            app:layout_constraintLeft_toLeftOf="@+id/boton_convocatorias"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/boton_convocatorias"
            app:layout_constraintHorizontal_bias="0.68" />
    </android.support.constraint.ConstraintLayout>


    <ImageButton
        android:id="@+id/boton_navigation_drawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:background="@android:color/transparent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:srcCompat="@drawable/ic_menu_white_24dp" />

    <FrameLayout
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:id="@+id/slide_publicidad"
        android:layout_gravity="right">

        <ImageButton
            android:id="@+id/btn_slide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:background="@android:color/transparent"
            android:layout_marginTop="70dp"
            android:layout_marginRight="16dp"
            app:srcCompat="@drawable/ic_keyboard_arrow_left_white_24dp" />

    </FrameLayout>

    <TextView
        android:id="@+id/textview_bolsa_de_trabajo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="@string/bolsa_de_trabajo"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:padding="10dp"/>

    <ImageButton
        android:id="@+id/boton_ayuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:background="@android:color/transparent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:srcCompat="@drawable/ic_help_600dp" />

    <FrameLayout
        android:id="@+id/pnl_publicidad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/black">

        <ImageView
            android:id="@+id/img_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/promocion_guanajoven" />

        <ImageButton
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:background="@android:color/transparent"
            android:padding="16dp"
            android:src="@drawable/ic_close_white_24dp" />

    </FrameLayout>

</FrameLayout>